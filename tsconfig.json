{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./build",

    /* Strict Type-Checking Options */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
